# Run the container with `docker run -p 3000:3000 -t evolonix-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system evolonix-api && \
          adduser --system -G evolonix-api evolonix-api

COPY apps/api/dist evolonix-api/
COPY apps/api/package.json evolonix-api/
RUN chown -R evolonix-api:evolonix-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix evolonix-api --omit=dev -f install

CMD [ "node", "evolonix-api" ]
