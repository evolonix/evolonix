{
  "name": "@evolonix/models-graphql",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "development": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "nx": {
    "targets": {
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "options": {
          "outputPath": "libs/models-graphql/dist",
          "main": "libs/models-graphql/src/index.ts",
          "tsConfig": "libs/models-graphql/tsconfig.lib.json",
          "format": [
            "esm"
          ],
          "declarationRootDir": "libs/models-graphql/src"
        }
      },
      "codegen": {
        "command": "npx graphql-codegen --config {projectRoot}/codegen.ts"
      }
    }
  },
  "dependencies": {
    "@graphql-codegen/cli": "^5.0.7"
  }
}
